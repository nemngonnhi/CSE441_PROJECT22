<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="@drawable/explore_item_background">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="120dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/cv_explore_child_item"
            app:cardBackgroundColor="@color/homeChildColor">

            <TextView
                android:id="@+id/tv_explore_child_title"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="child title"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"

                />
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="72dp"
                android:layout_height="108dp"
                android:id="@+id/iv_explore_child_item"
                android:src="@color/white"
                android:scaleType="centerCrop"
                android:layout_gravity="end"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                app:shapeAppearance="@style/roundedCornerImageView">
            </com.google.android.material.imageview.ShapeableImageView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>