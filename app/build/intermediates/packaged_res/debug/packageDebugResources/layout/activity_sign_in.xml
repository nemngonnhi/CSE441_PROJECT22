<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:backgroundTint="#1E1E1E"
    tools:context=".LoginandSignin.SignInActivity"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintVertical_bias="1.0"
        android:src="@drawable/signin_logo" />

    <TextView
        android:id="@+id/tv_letgetuin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:text="Let's get you in!"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:autoSizeTextType="none"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#00BCD4"
        android:text="Log in with a password"
        android:textColor="#FFFFFF"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvOr"
        android:layout_marginTop="32dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbGoogle"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@android:color/system_control_normal_light"
        android:text="Continue with Google"
        app:cornerRadius="6dp"
        app:icon="@drawable/google"
        app:iconGravity="textStart"
        app:iconSize="40dp"
        app:iconTint="@null"
        app:layout_constraintTop_toBottomOf="@id/tv_letgetuin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbFacebook"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@android:color/system_control_normal_light"
        android:text="Continue with Facebook"
        app:cornerRadius="6dp"
        app:icon="@drawable/fb2"
        app:iconGravity="textStart"
        app:iconSize="40dp"
        app:iconTint="@null"
        app:layout_constraintTop_toBottomOf="@+id/mbGoogle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbApple"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@android:color/system_control_normal_light"
        android:text="Continue with Apple"
        app:cornerRadius="6dp"
        app:icon="@drawable/apple"
        app:iconGravity="textStart"
        app:iconSize="40dp"
        app:iconTint="@null"

        app:layout_constraintTop_toBottomOf="@+id/mbFacebook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tvSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Sign Up"
        android:textColor="@color/titlecolor"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/textView4"
        app:layout_constraintTop_toTopOf="@id/textView4" />

    <TextView
        android:id="@+id/tvOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="or"
        android:textColor="#F8F3F3"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/mbApple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="4dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>