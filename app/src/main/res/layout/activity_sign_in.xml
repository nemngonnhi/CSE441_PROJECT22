<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:backgroundTint="#1E1E1E"
    tools:context=".SignInActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/musium_logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="299dp"
        android:layout_height="65dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="sans-serif-medium"
        android:text="Let's get you in"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toTopOf="@+id/materialButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnLog"
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:backgroundTint="#00BCD4"
        android:text="Log in with a password"
        android:textColor="#FFFFFF"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="650dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@android:color/system_control_normal_light"
        android:text="Continue with Google"
        app:cornerRadius="6dp"
        app:icon="@drawable/google"
        app:iconGravity="textStart"
        app:iconSize="40dp"
        app:iconTint="@color/material_dynamic_neutral100"
        app:layout_constraintBottom_toTopOf="@+id/materialButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton2"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@android:color/system_control_normal_light"
        android:text="Continue with Facebook"
        app:cornerRadius="6dp"
        app:icon="@drawable/fb2"
        app:iconGravity="textStart"
        app:iconSize="40dp"
        app:iconTint="@color/material_dynamic_neutral100"
        app:layout_constraintBottom_toTopOf="@+id/materialButton3"
        app:layout_editor_absoluteY="400dp"
        tools:layout_editor_absoluteX="30dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton3"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@android:color/system_control_normal_light"
        android:text="Continue with Apple"
        app:cornerRadius="6dp"
        app:icon="@drawable/apple"
        app:iconGravity="textStart"
        app:iconSize="40dp"
        app:iconTint="@color/material_dynamic_neutral100"
        app:layout_constraintBottom_toTopOf="@+id/btnLog"
        tools:layout_editor_absoluteX="30dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:backgroundTint="#1E1E1E"
        android:text="Sign up"
        android:textColor="#03A9F4"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="712dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#1E1E1E"
        app:icon="?attr/homeAsUpIndicator"
        app:iconSize="30dp"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="29dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="or"
        android:textColor="#F8F3F3"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/btnLog"
        tools:layout_editor_absoluteX="199dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="156dp"
        android:layout_height="30dp"
        android:text="Don't have an account?"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="722dp" />


</androidx.constraintlayout.widget.ConstraintLayout>