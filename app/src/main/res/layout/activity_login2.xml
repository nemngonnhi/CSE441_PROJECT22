<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:context=".activity_login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="270dp"
        android:layout_height="230dp"
        app:srcCompat="@drawable/musium_logo"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="47dp" />

    <Button
        android:id="@+id/btnLog"
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:backgroundTint="#00BCD4"
        android:text="Log in"
        android:textColor="#FFFFFF"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="544dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#1E1E1E"
        app:icon="?attr/homeAsUpIndicator"
        app:iconSize="30dp"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="29dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1E1E1E"
        app:icon="@drawable/google"
        app:iconSize="40dp"
        app:iconTint="@color/material_dynamic_neutral100"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="705dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="96dp"
        android:layout_height="58dp"
        android:backgroundTint="#1E1E1E"
        app:icon="@drawable/fb2"
        app:iconSize="45dp"
        app:iconTint="@color/material_dynamic_neutral100"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="705dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1E1E1E"
        app:icon="@drawable/apple"
        app:iconSize="40dp"
        app:iconTint="@color/material_dynamic_neutral100"
        tools:layout_editor_absoluteX="260dp"
        tools:layout_editor_absoluteY="705dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1E1E1E"
        android:text="Sign up"
        android:textColor="#00BCD4"
        tools:layout_editor_absoluteX="227dp"
        tools:layout_editor_absoluteY="751dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1E1E1E"
        android:text="Forgot the password?"
        android:textColor="#00BCD4"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="592dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember me"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="484dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" or continue with"
        android:textColor="#FFF9F9"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="669dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="301dp"
        android:layout_height="45dp"
        android:fontFamily="sans-serif-medium"
        android:text="Login to your account"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:autoSizeTextType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="292dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:startIconDrawable="@android:drawable/sym_action_email"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="361dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:startIconDrawable="@android:drawable/ic_lock_lock"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="420dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:textColor="@color/white"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="765dp" />

</androidx.constraintlayout.widget.ConstraintLayout>