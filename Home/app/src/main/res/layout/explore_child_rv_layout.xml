<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/cv_explore_child_item"
            android:backgroundTint="@color/homeChildColor">

            <TextView
                android:id="@+id/tv_explore_child_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="child title"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="start"

                />
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/iv_explore_child_item"
                android:src="@color/white"
                android:scaleType="centerCrop"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:shapeAppearance="@style/roundedCornerImageView">
            </com.google.android.material.imageview.ShapeableImageView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>